<%= turbo_frame_tag "appointment_#{appointment.id}" do %>

  <div 
    class="flex justify-between items-center gap-3 bg-white rounded-md shadow-sm mb-4 p-2" 
    id="<%= dom_id appointment %>"
  >

    <%= link_to appointment.booking, appointment_path(appointment) %>

    <div class="flex flex-nowrap gap-2">

      <%= button_to "Delete",
                    appointment_path(appointment),
                    method: :delete,
                    class: "inline-block px-4 py-3 rounded-lg bg-transparent bg-origin-border border-solid border-2 
                          border-transparent font-bold text-decoration-none cursor-pointer outline-none text-gray-900 
                          bg-gray-100" 
      %>

      <%= link_to "Edit",
                  edit_appointment_path(appointment),
                  class: "inline-block px-4 py-3 rounded-lg bg-transparent bg-origin-border border-solid border-2 
                        border-transparent font-bold text-decoration-none cursor-pointer outline-none 
                        text-gray-900 bg-gray-100" 
      %>
    
    </div>

  </div>

  <% end %>
